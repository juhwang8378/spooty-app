{
  "name": "spooty-desktop",
  "version": "2.2.1",
  "description": "Spooty desktop app",
  "author": "Spooty",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "node ../../scripts/prepare-backend-deps.mjs && electron-builder --mac dmg"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "31.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.spooty.app",
    "productName": "Spooty",
    "files": [
      "main.js"
    ],
    "extraResources": [
      { "from": "../../dist/backend", "to": "backend" },
      { "from": "../../dist/frontend", "to": "frontend" },
      { "from": "../../deps", "to": "deps" }
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": ["dmg"],
      "identity": null
    },
    "dmg": {
      "writeUpdateInfo": false
    }
  }
}
